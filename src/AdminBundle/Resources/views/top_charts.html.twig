                datasets: [{
                    label: 'Customers',
                    backgroundColor: "#26B99A",
                    data: [3012, 2299, 2983, 3111, 3288, 4922, 4848]
                }]
            },

            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: false
                        }
                    }]
                }
            }
        });

        var canvasDoughnut = new Chart(document.getElementById("canvasDoughnut"), {
            type: 'doughnut',
            tooltipFillColor: "rgba(51, 51, 51, 0.55)",
            data: {
                labels: [
                    "New",
                    "Returning"
                ],
                datasets: [{
                    data: [73, 27],
                    backgroundColor: [
                        "#455C73",
                        "#9B59B6"
                    ],
                    hoverBackgroundColor: [
                        "#34495E",
                        "#B370CF"
                    ]

                }]
            }
        });
    });
</script>
{% endif %}

