{% if app.request.attributes.get('_route') == 'admin_app_users_edit' %}
    <div class="row top_tiles" style="margin: 10px 0;">

        <div class="col-md-4 tile">
            <span>All consultations</span>
            <h2>514</h2>
            <span class="sparkline_one" style="height: 160px;">
                                      <canvas width="200" height="60" style="display: inline-block; vertical-align: top; width: 94px; height: 30px;"></canvas>
                                  </span>
        </div>
        <div class="col-md-4 tile">
            <span>Conversion rate</span>
            <h2>27%</h2>
            <span class="sparkline_two" style="height: 160px;">
                                      <canvas width="200" height="60" style="display: inline-block; vertical-align: top; width: 94px; height: 30px;"></canvas>
                                  </span>
        </div>
        <div class="col-md-4 dashboard-widget-content" >
            <div class="sidebar-widget">
                <h4>Achieve KPI</h4>
                <canvas width="150" height="80" id="foo2" class="" style="width: 160px; height: 100px;"></canvas>
                <div class="goal-wrapper">
                    <span class="gauge-value pull-left"></span>
                    <span id="gauge-text2" class="gauge-value pull-left">0</span>
                    <span id="goal-text2" class="goal-value pull-right">6.5M</span>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(function () {
            $(".sparkline_one").sparkline([200, 400, 300, 400, 500, 400, 500, 400, 300, 400, 500, 350, 220, 500, 400, 300, 180, 450], {
                type: 'bar',
                height: '40',
                barWidth: 9,
                colorMap: {
                    '7': '#a1a1a1'
                },
                barSpacing: 2,
                barColor: '#26B99A'
            });

            $(".sparkline_two").sparkline([20, 40, 30, 40, 50, 40, 50, 40, 30, 40, 50, 33, 22, 50, 40, 30, 50, 22], {
                type: 'line',
                width: '200',
                height: '40',
                lineColor: '#26B99A',
                fillColor: 'rgba(223, 223, 223, 0.57)',
                lineWidth: 2,
                spotColor: '#26B99A',
                minSpotColor: '#26B99A'
            });

            var opts = {
                lines: 12,
                angle: 0,
                lineWidth: 0.4,
                pointer: {
                    length: 0.75,
                    strokeWidth: 0.042,
                    color: '#1D212A'
                },
                limitMax: 'false',
                colorStart: '#1ABC9C',
                colorStop: '#1ABC9C',
                strokeColor: '#F0F3F3',
                generateGradient: true
            };

            var target = document.getElementById('foo2'),
                    gauge = new Gauge(target).setOptions(opts);

            gauge.maxValue = 6.5;
            gauge.animationSpeed = 32;
            gauge.set(4.5);
            gauge.setTextField(document.getElementById("gauge-text2"));
        })
    </script>
{% endif %}