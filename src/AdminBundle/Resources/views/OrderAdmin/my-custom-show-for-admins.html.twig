{% extends 'SonataAdminBundle:CRUD:show.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <style>
        * {
            box-sizing: border-box;
        }

        body {
            background-color: #edeff2;
            font-family: "Calibri", "Roboto", sans-serif;
        }

        .chat_window {
            left: 50%;
            top: 50%;
            background-color: #f8f8f8;
            overflow: hidden;
            border: 1px solid #b9b9b9;
            border-top: 3px solid #3c8dbc;
        }

        .top_menu {
            background-color: #fff;
            width: 100%;
            padding: 6px 0 6px;
            border-bottom: 1px solid #e3e3e3;
        }

        .top_menu .title {
            text-align: center;
            font-size: 20px;
        }

        .messages {
            position: relative;
            list-style: none;
            padding: 20px 10px 0 10px;
            margin: 0;
            height: 500px;
            overflow-y: scroll;
        }
        .messages .message {
            clear: both;
            overflow: hidden;
            margin-bottom: 20px;
            transition: all 0.5s linear;
            opacity: 0;
        }

        .messages .message.center .text_wrapper {
            background-color: rgba(253, 156, 166, 0.65);
            width: 100%;
        }

        .center_fio {
            font-weight: 800;
        }

        .center_file {
            text-decoration: underline;
        }

        .messages .message.left .text_wrapper {
            background-color: rgba(31, 253, 98, 0.36);
            margin-left: 20px;
        }
        .messages .message.left .text_wrapper::after, .messages .message.left .text_wrapper::before {
            right: 100%;
            border-right-color: rgba(31, 253, 98, 0.17);
        }
        .messages .message.left .text {
            color: #228516;
        }
        .messages .message.right .text_wrapper {
            background-color: #c7eafc;
            margin-right: 20px;
            float: right;
        }
        .messages .message.right .text_wrapper::after, .messages .message.right .text_wrapper::before {
            left: 100%;
            border-left-color: #c7eafc;
        }
        .messages .message.right .text {
            color: #45829b;
        }
        .messages .message.appeared {
            opacity: 1;
        }
        .messages .message .text_wrapper {
            display: inline-block;
            padding: 20px;
            border-radius: 6px;
            width: calc(100% - 85px);
            min-width: 100px;
            position: relative;
        }
        .messages .message .text_wrapper::after, .messages .message .text_wrapper:before {
            top: 18px;
            border: solid transparent;
            content: " ";
            height: 0;
            width: 0;
            position: absolute;
            pointer-events: none;
        }
        .messages .message .text_wrapper::after {
            border-width: 13px;
            margin-top: 0px;
        }
        .messages .message .text_wrapper::before {
            border-width: 15px;
            margin-top: -2px;
        }
        .messages .message .text_wrapper .text {
            font-size: 18px;
            font-weight: 300;
        }

        .bottom_wrapper {
            width: 100%;
            background-color: #fff;
            padding: 20px 20px;
            margin-top: 15px;
            border: 1px solid #b9b9b9;
        }
        .bottom_wrapper .message_input_wrapper {
            display: inline-block;
            height: 50px;
            border-radius: 5px;
            border: 1px solid #bcbdc0;
            width: calc(100% - 160px);
            position: relative;
            padding: 0 20px;
        }
        .bottom_wrapper .message_input_wrapper .message_input {
            border: none;
            height: 100%;
            box-sizing: border-box;
            width: calc(100% - 40px);
            position: absolute;
            outline-width: 0;
            color: gray;
        }
        .bottom_wrapper .send_message {
            width: 140px;
            height: 50px;
            display: inline-block;
            border-radius: 5px;
            background-color: #a3d063;
            border: 2px solid #a3d063;
            color: #fff;
            cursor: pointer;
            transition: all 0.2s linear;
            text-align: center;
            float: right;
            font-size: 18px;
            font-weight: 300;
        }
        .bottom_wrapper .send_message:hover {
            color: #a3d063;
            background-color: #fff;
        }

        .message_template {
            display: none;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/ShowcaseBundle/js/bootstrap-filestyle.js') }}"> </script>
    <script type="text/javascript" src="{{ asset('assets/js/comments.js') }}"> </script>
    <script>
        $(document).ready(function(){
            var chat = $('.messages');
            var height = chat[0].scrollHeight;
            chat.scrollTop(height);

            $('#order-file-upload').change(function (e) {
                this.form.submit();
            });
        });
    </script>
{% endblock %}

{% block show %}
    <div class="sonata-ba-view">
        {{ sonata_block_render_event('sonata.admin.show.top', { 'admin': admin, 'object': object }) }}

        {% set has_tab = (admin.showtabs|length == 1 and admin.showtabs|keys[0] != 'default') or admin.showtabs|length > 1 %}

        {% if has_tab %}

        {% elseif admin.showtabs is iterable %}
            {% set groups = admin.showtabs.default.groups %}
            {{ block('show_groups') }}
        {% endif %}

    </div>

    {{ sonata_block_render_event('sonata.admin.show.bottom', { 'admin': admin, 'object': object }) }}
{% endblock %}

{% block show_title %}
    {{ show_group.name|trans({}, show_group.translation_domain|default(admin.translationDomain)) }}
{% endblock %}

{% block show_field %}
    <tr class="sonata-ba-view-container">
        {% if elements[field_name] is defined %}
            {{ elements[field_name]|render_view_element(object)}}
        {% endif %}
    </tr>
{% endblock %}

{% block show_groups %}
    <div class="row">
        {% block field_row %}
            {% set show_group = admin.showgroups["Информация о деле"] %}

            <div class="{{ show_group.class|default('col-md-12') }} {{ no_padding|default(false) ? 'nopadding' }}">
                <div class="{{ show_group.box_class }}">
                    <div class="box-header">
                        <h4 class="box-title">
                            {{ block('show_title') }}
                        </h4>
                    </div>
                    <div class="box-body table-responsive no-padding">
                        <table class="table">
                            <tbody>
                            {% for field_name in show_group.fields %}
                                {{ block('show_field') }}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>


                {%  if is_granted('ROLE_ADMIN') %}
                    {% include('@Admin/OrderAdmin/_private_comments.html.twig') %}
                {%  endif %}            </div>

            <div class="col-md-6">
                <div class="chat_window">
                    <div class="top_menu">
                        <div class="title">Общение</div>
                    </div>
                    <ul class="messages">
                        {% for message in object.orderChatMessages %}

                            {% if message.userTo is null %}
                                {% set class = 'center' %}
                            {% elseif object.lawyer is same as(message.userFrom) %}
                                {% set class = 'right' %}
                            {% else %}
                                {% set class = 'left' %}
                            {% endif %}

                            <li class="message appeared {{ class }}">
                                <div class="text_wrapper">
                                    <div class="text">{{ message.text|raw }}</div>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            {% set show_group = admin.showgroups["Участники"] %}

            <div class="{{ show_group.class|default('col-md-12') }} {{ no_padding|default(false) ? 'nopadding' }}">
                <div class="{{ show_group.box_class }}">
                    <div class="box-header">
                        <h4 class="box-title">
                            {{ block('show_title') }}
                        </h4>
                    </div>
                    <div class="box-body table-responsive no-padding">
                        <table class="table">
                            <tbody>
                            {% for field_name in show_group.fields %}
                                {{ block('show_field') }}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            {% set show_group = admin.showgroups["Информация по услуге"] %}

            <div class="{{ show_group.class|default('col-md-12') }} {{ no_padding|default(false) ? 'nopadding' }}">
                <div class="{{ show_group.box_class }}">
                    <div class="box-header">
                        <h4 class="box-title">
                            {{ block('show_title') }}
                        </h4>
                    </div>
                    <div class="box-body table-responsive no-padding">
                        <table class="table">
                            <tbody>
                            {% for field_name in show_group.fields %}
                                {{ block('show_field') }}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


            <div class="col-md-3">
                <div class="box box-primary">
                    <div class="box-header">
                        <h4 class="box-title">
                            Документы в деле
                        </h4>
                    </div>
                    <div class="box-body table-responsive no-padding">
                        <table class="table">
                            <tbody>
                                {% for file in object.orderFiles %}
                                    <tr class="sonata-ba-view-container">
                                        <td><a href="{{ admin.generateUrl('download-file', {'fileId': file.id}) }}">{{ file.name }}</a></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% endblock %}

    </div>
{% endblock %}